<UserControl x:Class="ufficio.Componenti.posizioni.PaginaPosizioni"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ufficio.Componenti.posizioni"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Loaded="Grid_Loaded">
        <DataGrid x:Name="dgvPosizioni" Margin="0,65,0,0"/>
        <Button x:Name="btnAggiungi" Content="Aggiungi" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="129" Height="35" Click="btnAggiungi_Click"/>
        <Button x:Name="btnEsci"  Content="esci" Margin="0,10,26,0" VerticalAlignment="Top" Click="btnEsci_Click" HorizontalAlignment="Right" Width="34"/>
        <CheckBox x:Name="cbNegozi" Content="Negozi" HorizontalAlignment="Left" Margin="174,10,0,0" VerticalAlignment="Top" Click="Combo_Click" IsChecked="True"/>
        <CheckBox x:Name="cbMagazzini" Content="Magazzini" HorizontalAlignment="Left" Margin="174,30,0,0" VerticalAlignment="Top" Click="Combo_Click" IsChecked="True"/>

    </Grid>
</UserControl>
